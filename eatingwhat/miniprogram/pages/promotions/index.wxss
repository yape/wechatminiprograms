/* pages/promotions/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

/* Tabs */
.tabs {
  display: flex;
  background: #fff;
  height: 88rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  z-index: 10;
}

.tab-item {
  flex: 1;
  display: flex;
  width: 140rpx;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #ff4d4f;
  font-weight: 600;
  font-size: 30rpx;
}

.tab-line {
  position: absolute;
  bottom: 0;
  width: 40rpx;
  height: 4rpx;
  background: #ff4d4f;
  border-radius: 2rpx;
}

/* Loading */
.loading-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff4d4f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 26rpx;
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 26rpx;
  color: #999;
}

/* Scroll Content */
.content-scroll {
  flex: 1;
  overflow: hidden;
}

.promotion-list {
  padding: 20rpx;
}

/* Promo Card */
.promo-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  display: flex;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

.promo-img {
  width: 400rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
  flex-shrink: 0;
}

/* 遮罩层 */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    to bottom,
    rgba(0,0,0,0.1) 0%,
    rgba(0,0,0,0.3) 30%,
    rgba(0,0,0,0.7) 100%
  );
  z-index: 2;
}

.promo-info {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.promo-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.promo-tags {
  display: flex;
  margin-top: 8rpx;
}

.tag {
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

.type-tag {
  background: #e6f7ff;
  color: #1890ff;
}

.discount-tag {
  background: #fff1f0;
  color: #ff4d4f;
  border: 1rpx solid rgba(255, 77, 79, 0.2);
}

.promo-price-row {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  margin-top: 16rpx;
}

.price-info {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 24rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.current-price {
  font-size: 40rpx;
  color: #ff4d4f;
  font-weight: 600;
  margin-right: 10rpx;
  line-height: 1;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.action-btn {
  margin: 0;
  padding: 0;
  width: 140rpx;
  height: 56rpx;
  line-height: 56rpx;
  background: linear-gradient(90deg, #ff7875, #ff4d4f);
  color: #fff;
  font-size: 26rpx;
  border-radius: 28rpx;
  text-align: center;
  font-weight: 500;
}

.promo-footer {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #999;
}

.footer-tip {
  text-align: center;
  padding: 30rpx 0 50rpx;
  color: #ccc;
  font-size: 24rpx;
}
