/* pages/promotions/index.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

/* Custom Navbar */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 999;
  box-sizing: border-box;
  box-shadow: 0 1rpx 0 rgba(0,0,0,0.05);
}

.nav-title {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  z-index: 1;
}

.nav-left {
  position: absolute;
  left: 10rpx;
  bottom: 0;
  width: 88rpx;
  height: 44px;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

.back-icon {
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #333;
  border-bottom: 4rpx solid #333;
  transform: rotate(45deg);
}

/* Tabs */
.tabs {
  display: flex;
  background: #fff;
  height: 96rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
  z-index: 100;
  position: sticky;
  top: 0;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #64748b;
  position: relative;
  transition: all 0.3s;
}

.tab-item.active {
  color: #ff4d4f;
  font-weight: 600;
  font-size: 32rpx;
}

.tab-item text {
  white-space: nowrap;
}

.tab-line {
  position: absolute;
  bottom: 12rpx;
  width: 112rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #ff4d4f, #ff7875);
  border-radius: 3rpx;
  transition: all 0.3s;
}

/* Loading */
.loading-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 200rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #ff4d4f;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-state text {
  font-size: 26rpx;
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-state text {
  font-size: 26rpx;
  color: #999;
}

/* Scroll Content */
.content-scroll {
  flex: 1;
  overflow: hidden;
}

.promotion-list {
  padding: 20rpx;
}

/* Promo Card */
.promo-card {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  display: flex;
  flex-direction: column;
}

.img-container {
  position: relative;
  width: 100%;
  background-color: #f0f0f0;
}

.promo-img {
  width: 100%;
  /* height auto via mode="widthFix" */
  display: block;
}

.discount-badge {
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(135deg, #ff4d4f, #ff7875);
  color: #fff;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-bottom-right-radius: 16rpx;
  font-weight: 600;
  box-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.1);
}

.promo-info {
  padding: 24rpx;
}

.promo-header {
  margin-bottom: 20rpx;
}

.promo-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  line-height: 1.5;
}

.type-tag {
  display: inline-block;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  vertical-align: middle;
  background: #e6f7ff;
  color: #1890ff;
  font-weight: 500;
  transform: translateY(-2rpx);
}

.promo-footer {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 16rpx;
}

.price-row {
  display: flex;
  align-items: baseline;
}

.currency {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: 600;
  margin-right: 4rpx;
}

.current-price {
  font-size: 44rpx;
  color: #ff4d4f;
  font-weight: 700;
  margin-right: 12rpx;
  line-height: 1;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

.sales-text {
  font-size: 22rpx;
  color: #999;
}

.footer-tip {
  text-align: center;
  padding: 30rpx 0 50rpx;
  color: #ccc;
  font-size: 24rpx;
}
