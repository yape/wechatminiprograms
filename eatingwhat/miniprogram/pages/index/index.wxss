/* 容器 - 保持原有背景 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #111827 40%, #0b1220 100%);
  padding-bottom: 120rpx;
  padding-top: env(safe-area-inset-top);
}

/* 原有头部样式保持不变 */
.hero { 
  height: 460rpx; 
  padding: 48rpx 24rpx; 
  background: linear-gradient(135deg, #0f172a 0%, #111827 40%, #0b1220 100%);
  color: #e5e7eb; 
  border-bottom-left-radius: 24rpx; 
  border-bottom-right-radius: 24rpx;
  display: flex; 
  flex-direction: column; 
  align-items: center; 
  justify-content: center;
}
.title { font-size: 48rpx; font-weight: 700; letter-spacing: 2rpx; }
.subtitle { margin-top: 12rpx; color: #94a3b8; }

.pulse { 
  margin-top: 36rpx; 
  width: 360rpx; 
  height: 360rpx; 
  border-radius: 50%; 
  background: radial-gradient(closest-side, #16a34a, #16a34a 60%, rgba(22,163,74,0.6) 61%, rgba(22,163,74,0.15));
  box-shadow: 0 0 24rpx rgba(22,163,74,0.6), 0 0 80rpx rgba(22,163,74,0.35);
  display: flex; align-items: center; justify-content: center;
  color: #fff; font-size: 32rpx; font-weight: 600;
  animation: pulseGlow 2.4s infinite ease-in-out;
}
@keyframes pulseGlow {
  0% { transform: scale(1); box-shadow: 0 0 24rpx rgba(22,163,74,0.6), 0 0 80rpx rgba(22,163,74,0.35); }
  50% { transform: scale(1.06); box-shadow: 0 0 36rpx rgba(22,163,74,0.75), 0 0 120rpx rgba(22,163,74,0.45); }
  100% { transform: scale(1); box-shadow: 0 0 24rpx rgba(22,163,74,0.6), 0 0 80rpx rgba(22,163,74,0.35); }
}

/* 新增：加载动画 */
.loading-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(59, 130, 246, 0.3);
  border-radius: 50%;
  border-top-color: #3b82f6;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  color: #94a3b8;
  margin-top: 30rpx;
  font-size: 28rpx;
}

/* 原有错误样式增强 */
.error {
  color: #f87171;
  padding: 24rpx;
  text-align: center;
}

.error-section {
  background: rgba(15, 23, 42, 0.8);
  border-radius: 16rpx;
  padding: 40rpx;
  margin: 24rpx;
  text-align: center;
  color: #f87171;
  border: 1rpx solid rgba(248, 113, 113, 0.3);
}

.retry-btn {
  background: #3b82f6;
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
  display: inline-block;
  font-weight: bold;
}

/* 修改：结果容器 - 固定宽度占满屏幕 */
.result-container {
  width: 100vw;
  box-sizing: border-box;
  padding: 24rpx;
}

/* 修改：卡片样式 - 固定宽度，不再有边距限制 */
.card { 
  width: 100%;
  box-sizing: border-box;
  padding: 32rpx; 
  background: rgba(15, 23, 42, 0.8); 
  color: #e5e7eb; 
  border-radius: 20rpx; 
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.3); 
  border: 1rpx solid rgba(59,130,246,0.25);
  backdrop-filter: blur(10px);
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}

/* 修改：卡片头部布局优化 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
  min-height: 60rpx;
}

/* 新增：店铺名称样式 - 靠左展示，宽度自适应 */
.store-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  flex: 1;
  text-align: left;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
  padding-right: 20rpx;
}

.tag {
  background: #16a34a;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 600;
  white-space: nowrap;
  flex-shrink: 0;
}

.card-content {
  background: rgba(30, 41, 59, 0.5);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.row { 
  display: flex; 
  align-items: center; 
  justify-content: space-between; 
  margin-top: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid rgba(59, 130, 246, 0.1);
}

.row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.label { 
  color: #93a4bc; 
  font-size: 26rpx; 
  white-space: nowrap;
}

/* 修改：距离和地址值样式分开 */
.distance-value, .address-value { 
  font-size: 28rpx; 
  font-weight: 600; 
  color: #e5e7eb;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

.address-value {
  -webkit-line-clamp: 3; /* 地址可以显示更多行 */
}

/* 评分样式 */
.rating-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #fbbf24;
  text-align: right;
  margin-left: 20rpx;
}

/* 人均消费样式 */
.cost-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #34d399;
  text-align: right;
  margin-left: 20rpx;
}

/* 特色标签样式 */
.tag-value {
  font-size: 26rpx;
  font-weight: 500;
  color: #a5b4fc;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.4;
}

/* CPS优惠券区域 */
.coupon-section {
  margin-top: 24rpx;
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(249, 115, 22, 0.15) 100%);
  border: 1rpx solid rgba(239, 68, 68, 0.3);
  border-radius: 16rpx;
  padding: 20rpx;
  position: relative;
  overflow: hidden;
}

.coupon-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #ef4444, #f97316);
}

.coupon-badge {
  font-size: 22rpx;
  color: #fbbf24;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.coupon-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.coupon-info {
  flex: 1;
}

.coupon-title {
  font-size: 28rpx;
  color: #f1f5f9;
  font-weight: 600;
  display: block;
  margin-bottom: 8rpx;
}

.coupon-price {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.coupon-current {
  font-size: 36rpx;
  color: #ef4444;
  font-weight: 700;
}

.coupon-original {
  font-size: 24rpx;
  color: #64748b;
  text-decoration: line-through;
}

.coupon-action {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.coupon-discount {
  font-size: 22rpx;
  color: #ef4444;
  background: rgba(239, 68, 68, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-weight: 600;
}

.coupon-btn {
  font-size: 26rpx;
  color: #f97316;
  font-weight: 600;
}

.actions { 
  display: flex; 
  gap: 16rpx; 
  margin-top: 32rpx;
}

.btn { 
  flex: 1; 
  padding: 24rpx; 
  background: #16a34a; 
  color: #fff; 
  text-align: center; 
  border-radius: 12rpx; 
  font-weight: 600;
  font-size: 28rpx;
}

.secondary { 
  background: #3b82f6; 
}

/* 新增：占位区域 */
.placeholder-section {
  margin: 40rpx 24rpx 0 24rpx;
}

/* 骨架屏卡片 */
.placeholder-card {
  background: rgba(15, 23, 42, 0.5);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.15);
  animation: placeholderPulse 2s infinite;
}

@keyframes placeholderPulse {
  0% { opacity: 0.5; }
  50% { opacity: 0.7; }
  100% { opacity: 0.5; }
}

.placeholder-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.placeholder-title {
  width: 60%;
  height: 40rpx;
  background: linear-gradient(90deg, rgba(30, 41, 59, 0.5) 25%, rgba(59, 130, 246, 0.3) 50%, rgba(30, 41, 59, 0.5) 75%);
  background-size: 200% 100%;
  border-radius: 8rpx;
  animation: shimmer 3s infinite;
}

.placeholder-tag {
  width: 80rpx;
  height: 40rpx;
  background: rgba(59, 130, 246, 0.3);
  border-radius: 20rpx;
}

.placeholder-content {
  background: rgba(30, 41, 59, 0.3);
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.placeholder-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  align-items: center;
}

.placeholder-row:last-child {
  margin-bottom: 0;
}

.placeholder-label {
  width: 120rpx;
  height: 30rpx;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 6rpx;
}

.placeholder-value {
  width: 50%;
  height: 30rpx;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 6rpx;
}

.placeholder-actions {
  display: flex;
  gap: 16rpx;
}

.placeholder-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(59, 130, 246, 0.2);
  border-radius: 12rpx;
}

@keyframes shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

/* 引导内容 */
.guide-content {
  text-align: center;
  padding: 40rpx 0;
}

.guide-image {
  width: 280rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
  filter: brightness(0.8) saturate(0.7);
}

.guide-text {
  margin-bottom: 50rpx;
}

.guide-title {
  display: block;
  font-size: 34rpx;
  color: #e5e7eb;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.guide-desc {
  display: block;
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.6;
  padding: 0 20rpx;
}

/* 特性列表 */
.features {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  max-width: 500rpx;
  margin: 0 auto;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(30, 41, 59, 0.4);
  padding: 24rpx 28rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.2);
}

.feature-icon {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(59, 130, 246, 0.15);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #3b82f6;
}

.feature-text {
  color: #cbd5e1;
  font-size: 26rpx;
  flex: 1;
  text-align: left;
}

/* 原有FAB按钮样式保持不变 */
.fab { 
  position: fixed; 
  right: 32rpx; 
  width: 96rpx; 
  height: 96rpx; 
  border-radius: 50%; 
  background: linear-gradient(135deg, #111827, #0b1220);
  color: #e5e7eb; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.25), 0 0 40rpx rgba(59,130,246,0.35);
  border: 1rpx solid rgba(59,130,246,0.25);
  z-index: 100;
}

.fab.order0 {
  bottom: 145rpx;
}
.fab.order1 {
  bottom: 48rpx;
}

/* 新增：空状态（如果使用） */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  color: #94a3b8;
  font-size: 28rpx;
  margin-bottom: 40rpx;
}

/* 侧边栏遮罩 */
.sidebar-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.sidebar-mask.show {
  opacity: 1;
  visibility: visible;
}

/* 侧边栏 */
.sidebar {
  position: fixed;
  top: 0;
  left: -80%;
  width: 80%;
  max-width: 600rpx;
  height: 100vh;
  background: linear-gradient(180deg, #0f172a 0%, #111827 100%);
  z-index: 300;
  display: flex;
  flex-direction: column;
  transition: left 0.3s ease;
  box-shadow: 8rpx 0 32rpx rgba(0, 0, 0, 0.5);
}

.sidebar.show {
  left: 0;
}

.sidebar-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(59, 130, 246, 0.2);
}

.sidebar-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #f1f5f9;
}

.sidebar-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #94a3b8;
  background: rgba(30, 41, 59, 0.6);
  border-radius: 50%;
}

.sidebar-content {
  flex: 1;
  padding: 24rpx;
  overflow-y: auto;
  box-sizing: border-box;
}

/* 设置项 */
.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 24rpx;
  background: rgba(30, 41, 59, 0.5);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(59, 130, 246, 0.15);
}

.setting-label {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.setting-icon {
  font-size: 32rpx;
}

.setting-text {
  font-size: 28rpx;
  color: #e5e7eb;
  font-weight: 500;
}

.setting-value {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #94a3b8;
  font-size: 26rpx;
  max-width: 240rpx;
}

.setting-value text:first-child {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow {
  font-size: 32rpx;
  color: #64748b;
}

/* 输入框样式 */
.setting-input-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.setting-input {
  width: 140rpx;
  height: 56rpx;
  background: rgba(15, 23, 42, 0.6);
  border: 1rpx solid rgba(59, 130, 246, 0.2);
  border-radius: 10rpx;
  padding: 0 16rpx;
  color: #e5e7eb;
  font-size: 26rpx;
  text-align: right;
}

.input-unit {
  color: #94a3b8;
  font-size: 24rpx;
}

/* 侧边栏底部 */
.sidebar-footer {
  padding: 24rpx;
  border-top: 1rpx solid rgba(59, 130, 246, 0.2);
  padding-bottom: calc(env(safe-area-inset-bottom) + 24rpx);
}

/* 说明区域 */
.tips-section {
  background: rgba(30, 41, 59, 0.3);
  border-radius: 12rpx;
  padding: 20rpx;
}

.tips-title {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.5;
}