<view class="hero">

<view class="title">今天吃点啥？</view>

<view class="subtitle">一键探索你附近的美味</view>

<view class="pulse" bindtap="onRecommend">

 <text>开始推荐</text>

</view>

</view>



<view wx:if="{{loading}}" class="loading">加载中...</view>

<view wx:if="{{error}}" class="error">{{error}}</view>



<view class="card" wx:if="{{result}}">

<view class="value">{{result.name}}</view>

<view class="row"><text class="label">距离</text><text>{{result._distanceText}}</text></view>

<view class="row"><text class="label">地址</text><text>{{result.address || result.adname || ''}}</text></view>

<view class="actions" style="margin-top: 24rpx;">

 <view class="btn secondary" bindtap="onReshuffle">换一个</view>

 <view class="btn" bindtap="onNavigate">去这里</view>

</view>

</view>



<view class="fab" bindtap="onOpenSettings">⚙️</view>

